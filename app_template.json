{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "phpinfo",
    "annotations": {
      "description": "An example PHP application that returns phpinfo()",
      "tags": "instant-app,php,",
      "iconClass": "icon-php"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "phpinfo",
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 8080,
            "targetPort": 80
          }
        ],
        "selector": {
          "name": "phpinfo"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
          "name": "phpinfo",
          "creationTimestamp": null
      },
      "spec": {
          "host": "",
          "to": {
              "kind": "Service",
              "name": "phpinfo"
          }
      },
      "status": {}
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
          "name": "phpinfo"
      },
      "spec": {
        "dockerImageRepository": "docker.io/jasoncallaway/phpinfo",
        "tags": [
          {
            "name": "0.2",
            "annotations": {
                "description": "Example PHP application that returns phpinfo",
                "iconClass": "icon-php"
            },
            "from": {
                "kind": "ImageStreamTag",
                "name": "latest"
            }
          },
          {
            "name": "latest"
          }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
          "name": "phpinfo",
          "labels": {
              "servicegroup": "phpinfo"
          },
          "creationTimestamp": null
      },
      "spec": {
          "triggers": [
              {
                  "type": "ImageChange",
                  "imageChange": {}
              }
          ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "phpinfo"
      },
      "spec": {
        "template": { 
          "metadata": {
            "labels": {
              "name": "phpinfo"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "phpinfo",
                "image": "phpinfo",
                "ports": [
                  {
                    "containerPort": 80,
                    "protocol": "TCP"
                  }
                ]
              }
            ]
          }
        }
      },
      "replicas": 1, 
      "selector": {
        "name": "phpinfo"
      },
      "triggers": [
        {
          "type": "ConfigChange" 
        },
        {
          "type": "ImageChange", 
          "imageChangeParams": {
            "automatic": true,
            "containerNames": [
              "phpinfo"
            ],
            "from": {
              "kind": "ImageStreamTag",
              "name": "phpinfo:latest"
            }
          }
        }
      ],
      "strategy": { 
        "type": "Rolling"
      }
    }
  ]
}
